<table>
  <thead>
    <tr>
    <th><%= Report.human_attribute_name('created_at') %></th>
    <th><%= Report.human_attribute_name('user') %></th>
    <th><%= Report.human_attribute_name('title') %></th>
    <th><%= Report.human_attribute_name('content') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <% user = User.find(report.user_id) %>
      <tr>
        <td><%= I18n.l(report.created_at.to_date, format: :long) %></td>
        <td><%= link_to user.email, user_path(user.id) %></td>
        <td><%= report.title %></td>
        <td><%= report.content %></td>
        <td><%= link_to I18n.t('show'), report %></td>
        <% if current_user == user %> 
          <td><%= link_to I18n.t('edit'), edit_report_path(report) %></td>
          <td><%= link_to I18n.t('destroy'), report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
